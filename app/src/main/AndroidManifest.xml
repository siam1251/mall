<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kineticcafe.kcpmall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.ICApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kineticcafe.kcpmall.activities.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DetailActivity"
            android:parentActivityName="com.kineticcafe.kcpmall.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kineticcafe.kcpmall.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.kineticcafe.kcpmall.activities.ZoomableImage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Plain" />
        <activity
            android:name="com.kineticcafe.kcpmall.activities.InterestedCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.kineticcafe.kcpmall.activities.InterestedStoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />

        <activity
            android:name="com.kineticcafe.kcpmall.activities.SubCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.kineticcafe.kcpmall.activities.MallInfoDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.kineticcafe.kcpmall.activities.MallHourActivity"
            android:parentActivityName="com.kineticcafe.kcpmall.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kineticcafe.kcpmall.activities.MainActivity" />
        </activity>

        <activity
            android:name="com.kineticcafe.kcpmall.activities.ProfileInformationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />

        <activity
            android:name="com.kineticcafe.kcpmall.activities.MyPagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" />
    </application>

</manifest>