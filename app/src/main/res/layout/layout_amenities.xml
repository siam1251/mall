<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/SelectableItemForeground"
    android:layout_height="48dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <com.kineticcafe.kcpmall.views.CustomFontView.CustomFontTextView
        app:fontFamily="@string/fontFamily_roboto_regular"
        android:id="@+id/tvAmenity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/place_txt"
        android:textSize="16sp"
        android:text="Customer Service"
        android:gravity="center_vertical"
        />

    <android.support.v7.widget.SwitchCompat
        android:theme="@style/switchStype"
        app:theme="@style/switchStype"
        android:id="@+id/swAmenity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />



</RelativeLayout>