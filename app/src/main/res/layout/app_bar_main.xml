<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        tools:context="com.kineticcafe.kcpmall.MainActivity"

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ablTopNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tbMain"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_scrollFlags="scroll|enterAlways"
                    />
                    app:layout_scrollFlags="scroll|enterAlways|snap"

        </android.support.design.widget.AppBarLayout>

        <!--<android.support.v4.view.ViewPager-->
        <com.kineticcafe.kcpmall.views.KcpAnimatedViewPager
            android:id="@+id/vpMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/main_app_bar_layout_height"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:selectedColor="@color/themeColor"
            app:unSelectedColor="@color/unselected"
            />
            app:selectedColor="@color/holo_red_light_transparent"
            app:unSelectedColor="@color/unselected"

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ablBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_app_bar_layout_height"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentBottom="true">


        <android.support.design.widget.TabLayout
            android:id="@+id/tlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_collapseMode="pin"
            app:tabIndicatorHeight="0dp"/>

    </android.support.design.widget.AppBarLayout>
</RelativeLayout>
