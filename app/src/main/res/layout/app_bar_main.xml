<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ablTopNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            >

            <include layout="@layout/layout_toolbar" />

        </android.support.design.widget.AppBarLayout>

        <com.kineticcafe.kcpmall.views.KcpAnimatedViewPager
            android:id="@+id/vpMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/vpMain_padding_bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:selectedColor="@color/themeColor"
            app:unSelectedColor="@color/unselected"
            />

        <!--<FrameLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/flContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
