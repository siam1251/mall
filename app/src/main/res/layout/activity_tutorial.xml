<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlOnbrd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_gradient_onboarding">
    <ImageView
        android:id="@+id/iv_android_frame"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/android_phone_frame_black"
        />

    <com.ivanhoecambridge.mall.onboarding.TouchConnectedViewPager
        android:background="@color/black"
        android:id="@+id/vp_tutorial_image"
        android:layout_width="239dp"
        android:layout_height="337dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <com.ivanhoecambridge.mall.onboarding.TouchConnectedViewPager
        android:id="@+id/vp_tutorial_description"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="64dp">


        <LinearLayout
            android:background="@color/white"
            android:layout_height="64dp"
            android:id="@+id/llViewPagerCircle"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" />

        <com.ivanhoecambridge.mall.views.CustomFontView.CustomFontTextView
            app:fontFamily="@string/fontFamily_roboto_medium"
            style="@style/SelectableItemForeground"
            android:layout_alignParentRight="true"
            android:textColor="@color/themeColor"
            android:text="@string/onbd_btn_lets_get_skip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="@dimen/activity_margin_medium"
            android:id="@+id/tvOnbdSkip"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            />

        <com.ivanhoecambridge.mall.views.CustomFontView.CustomFontTextView
            app:fontFamily="@string/fontFamily_roboto_medium"
            android:background="@color/white"
            style="@style/SelectableItemForeground"
            android:gravity="center"
            android:textColor="@color/themeColor"
            android:text="@string/onbd_btn_lets_get_started"
            android:layout_height="64dp"
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:id="@+id/tvOnbd"
            />

    </RelativeLayout>
</RelativeLayout>