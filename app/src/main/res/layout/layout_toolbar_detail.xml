<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    >
    android:theme="@style/AppTheme.PopupOverlay"
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        >
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        <com.kineticcafe.kcpmall.views.ThemedImageView
            xmlns:ThemedImageView="http://schemas.android.com/apk/res-auto"
            android:layout_marginRight="24dp"
            android:layout_gravity="right"
            android:id="@+id/ivFav"
            android:transitionName="@string/transition_fav"
            android:layout_width="@dimen/ancmt_fav_width"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_fav"
            android:adjustViewBounds="true"
            ThemedImageView:filterColor="@color/black"
            />
        ThemedImageView:filterColor="@color/white"


    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>