<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_bg"
    >
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cdlIntCat"
        tools:context="com.ivanhoecambridge.mall.activities.InterestedCategoryActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ablTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <include
                layout="@layout/layout_toolbar_intrstd_category" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/card_bg"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:ThemedImageView="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scSign"
            android:fillViewport="true"
            >

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/card_bg"
                android:layout_width="match_parent"
                android:id="@+id/rlTransition"
                android:layout_height="match_parent">


                <com.ivanhoecambridge.mall.views.CustomFontView.CustomFontTextView
                    app:fontFamily="@string/fontFamily_roboto_medium"
                    android:layout_marginTop="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_card_number"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="14dp"
                    />

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:onClick="onGoogleClicked"
                    android:clickable="false"
                    android:id="@+id/cvGoogle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    card_view:cardCornerRadius="@dimen/sign_in_card_corner_radius"
                    card_view:cardElevation="@dimen/sign_in_card_elevation"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_above="@+id/llSignInCreateAccount"
                    android:layout_marginBottom="22dp"
                    card_view:cardBackgroundColor="@color/white"
                    >
                        <EditText
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/etCard"
                            android:inputType="phone"
                            android:background="@android:color/transparent"
                            android:maxLength="20"
                            />
                </android.support.v7.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    style="@style/SelectableItemForegroundWhite"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:id="@+id/llSignInCreateAccount"
                    android:background="@color/sign_in_disabled"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="48dp"
                    >

                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/pb"
                        style="@style/progressBarMedium"
                        android:visibility="gone"
                        />

                    <com.ivanhoecambridge.mall.views.CustomFontView.CustomFontTextView
                        android:id="@+id/tvSign"
                        style="@style/SelectableItemForeground"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        app:fontFamily="@string/fontFamily_roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/gc_add_card"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
