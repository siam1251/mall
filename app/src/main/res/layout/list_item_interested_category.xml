<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    android:layout_width="match_parent"

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvIntrst"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/intrstd_card_corner_radius"
        card_view:cardUseCompatPadding="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:background="@drawable/btn_intrstd_cat"
        style="@style/SelectableItemForeground"
        >
        style="@style/SelectableItemForegroundOpaque"

        <TextView
            android:layout_gravity="center"
            android:lines="1"
            android:gravity="center"
            android:id="@+id/tvIntrstd"
            android:textSize="@dimen/intrstd_name"
            android:layout_marginLeft="@dimen/intrst_card_txt_horizontal_margin"
            android:layout_marginRight="@dimen/intrst_card_txt_horizontal_margin"
            android:textColor="@color/intrstd_txt"
            android:layout_height="@dimen/intrstd_card_height"
            android:layout_width="wrap_content"
            android:text="Men's everyday fashion"
            />
            android:text="@string/intrst_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/intrstd_card_height"

    </android.support.v7.widget.CardView>
</RelativeLayout>
