<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    android:layout_margin="3dp"
    android:layout_margin="0.1dp"
    android:layout_width="match_parent"

        android:layout_margin="3dp"
        android:layout_margin="1dp"
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvIntrst"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/intrstd_card_corner_radius"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_intrstd_cat"
        style="@style/SelectableItemForeground"
        android:layout_width="wrap_content"
        card_view:cardUseCompatPadding="true"
        >
        android:layout_width="match_parent"
        style="@style/SelectableItemForegroundOpaque"

            app:fontFamily="@string/fontFamily_roboto_regular"
        <com.kineticcafe.kcpmall.views.CustomFontView.CustomFontTextView
            android:layout_gravity="center"
            android:lines="1"
            android:gravity="center"
            android:id="@+id/tvIntrstd"
            android:textColor="@color/intrstd_txt_off"
            android:layout_height="@dimen/intrstd_card_height"
            android:text="Men's everyday fashion"
            android:textSize="@dimen/intrstd_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/intrst_card_txt_horizontal_margin"
            android:layout_marginRight="@dimen/intrst_card_txt_horizontal_margin"
            />
            android:layout_width="wrap_content"
    </android.support.v7.widget.CardView>
</RelativeLayout>
