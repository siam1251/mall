<resources>

    <!-- Attrs defined outside of styleable elements are common shared values that any view can use -->
    <attr name="drawableFilterColor" format="color"/>
    <attr name="fontFamily" format="string"/>
    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="KCPSetRatioImageView">
        <attr name="imageRatio" format="dimension"/>
        <attr name="zoomable" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="KcpAnimatedViewPager">
        <attr name="selectedColor" format="color"/>
        <attr name="unSelectedColor" format="color"/>
        <!--<attr name="finalYPosition" format="dimension"/>-->
    </declare-styleable>

    <declare-styleable name="ThemeColorImageView">
        <attr name="filterColor" format="color"/>
        <attr name="filterColorSelected" format="color"/>
        <!--<attr name="finalYPosition" format="dimension"/>-->
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="borderFilterColor" format="color"/>
        <attr name="srcFilterColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="badgeBgColor" format="color"/>
        <attr name="badgeTextColor" format="color"/>
        <!--<attr name="finalYPosition" format="dimension"/>-->
    </declare-styleable>

    <declare-styleable name="AlphaTextView">
        <attr name="textAlpha" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomFontTextView">
        <attr name="fontFamily"/>
        <attr name="drawableFilterColor"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomBottomSheetBehavior">
        <attr name="anchorPoint" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FormEditText">
        <attr name="fontFamily"/>
        <attr name="drawableFilterColor"/>
        <attr name="drawableFilterColorSelected" format="color"/>
        <attr name="activeHint" format="enum">
            <enum name="none" value="0"/>
            <enum name="underlineDash" value="1"/>
        </attr>
    </declare-styleable>
</resources>

