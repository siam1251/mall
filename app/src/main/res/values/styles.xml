<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>


    <style name="AppTheme.Plain" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<style name="AppTheme.Plain" parent="Theme.AppCompat.Light">-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<style name="AppTheme.Base" parent="Theme.AppCompat.Light">-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@color/themeColor</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorSecondary">@color/hamburger_menu</item>
        <item name="buttonBarButtonStyle">@style/MyButtonStyle</item>



        <!--For TextInputLayout Underline Color-->
        <item name="colorControlNormal">@color/detail_separator_color</item>
        <item name="colorControlActivated">@color/detail_separator_color</item>

        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="DialogTheme.BirthdayPicker" parent="DialogTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/welcome_btn_color</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/welcome_btn_color</item>
    </style>

    <style name="MyPreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="android:colorForeground">@color/ancmt_title_color</item>
    </style>


    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="colorControlNormal">@color/checkbox_normal</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Onboarding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>



    <style name="switchStype">
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="android:colorForeground">@color/ancmt_title_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/hamburger_menu</item>
    </style>

    <style name="DrawerArrowStyleActiveMall" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/themeColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SplashScreen" parent="@style/AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="separater">
        <item name="android:background">@color/detail_separator_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="separaterNews">
        <item name="android:background">#d7d7dd</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="verticalSeparater">
        <item name="android:background">@color/info_vertical_separator_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="emptyStateMsg">
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/empty_state_msg_text</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="progressBarMedium" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>


    <style name="progressBarSmall" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/themeColor</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/toolbarTextColor</item>
    </style>



    <style name="ProgressBarStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/themeColor</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">1dp</item>
        <item name="colorAccent">@color/themeColor</item> <!--what changes the color of the circle-->
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemBackgroundOpaque">
        <item name="android:theme">@style/SelectableItemThemeOpaque</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="SelectableItemForegroundNormal">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForegroundCircle">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/themeColorTransparent</item>
    </style>

    <style name="SelectableItemForegroundOpaque">
        <item name="android:theme">@style/SelectableItemThemeOpaque</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemThemeOpaque">
        <item name="colorControlHighlight">@color/themeColor</item>
    </style>

    <style name="SelectableItemForegroundWhite">
        <item name="android:theme">@style/SelectableItemWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemWhite">
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="DrawerLayoutFavouriteItemsTextView">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>

    </style>

    <style name="DrawerLayoutFavouriteItemsFrameLayout">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <!--<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>-->
    <style name="DrawerLayoutFavouriteItemsBadge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="favIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>



    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textColorHint">@color/intrstd_cat_desc</item>
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/intrstd_cat_desc</item>
        <item name="android:textSize">13dp</item>

    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
        <!--<item name="android:textColor">@color/sign_in_red</item>-->


    <style name="EditTextSignIn" parent="@android:style/Widget.EditText">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewSignIn" parent="@style/CardView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">326dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="cardCornerRadius">@dimen/sign_in_card_corner_radius</item>
        <item name="cardElevation">@dimen/sign_in_card_elevation</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="CardViewText" parent="TextAppearance.AppCompat">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="CardViewForm" parent="@style/CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardViewForm.GiftCard" parent="CardViewForm">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">22dp</item>
    </style>

    <style name="CardViewForm.Button" parent="CardViewForm">
        <item name="android:clickable">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:theme">@style/SelectableItemWhite</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditTextForm" parent="@style/Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="EditTextForm.Number" parent="EditTextForm">
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789-_</item>
    </style>

    <style name="TextViewForm" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/info_txt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/fontFamily_roboto_bold</item>
    </style>

    <style name="TextViewError" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dropdown_error_red</item>
    </style>

</resources>


